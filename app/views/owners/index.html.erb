<h1>Listing owners</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Address</th>
    <th>City</th>
    <th>Country</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @owners.each do |owner| %>
  <tr>
    <td><%= owner.firstname %></td>
    <td><%= owner.lastname %></td>
    <td><%= owner.address %></td>
    <td><%= owner.city %></td>
    <td><%= owner.country %></td>
    <td><%= owner.email %></td>
    <td><%= owner.phone %></td>
    <td><%= owner.active %></td>
    <td><%= link_to 'Show', owner %></td>
    <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
    <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

